<h2>New Pokemon</h2>

<form action="/pokemon" method="post" >
  <label>Pokemon Name:</label>
  <input name="pokemon[name]">

  <label>Combat Power:</label>
  <input name="pokemon[cp]">

  <label>Poketype:</label>
  <input name="pokemon[poke_type]">

  <label for="/img/url">Pokemon Picture:</label>
  <input name="pokemon[img_url]">

  <input type="submit" value="Create">
</form>
